---
import { Image } from "astro:assets";

const { data } = Astro.props;
const { name, description, url, image } = data;
---

<div class="mb-6 flex max-w-2xl flex-row gap-4 md:flex-row">
  <div class="shrink-0">
    <Image class="h-24 w-18" src={image} alt="" width={72} height={96} />
  </div>
  <div class="flex flex-col">
    <h3 class="text-lg font-bold">
      <a href={url}>{name}</a>
    </h3>
    <p class="text-sm">
      {description}
    </p>
  </div>
</div>

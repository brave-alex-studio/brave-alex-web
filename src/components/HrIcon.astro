---
import IconForest from "@/assets/icons/IconForest.svg";

export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
}

const { noPadding = false, ariaHidden = true } = Astro.props;
---

<div class:list={["mx-auto max-w-app", noPadding ? "px-0" : "px-4"]}>
  <div class="flex items-center gap-4" aria-hidden={ariaHidden}>
    <hr class="flex-1 border-border" />
    <IconForest class="font-color-accent h-6 w-6 shrink-0" />
    <hr class="flex-1 border-border" />
  </div>
</div>

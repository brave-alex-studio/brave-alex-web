---
import HrIcon from "./HrIcon.astro";
import Socials from "./Socials.astro";
import IconHeart from "@/assets/icons/IconHeart.svg";
import IconVeggies from "@/assets/icons/IconVeggies.svg";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <HrIcon noPadding />
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4"
  >
    <Socials centered />
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row">
      <span>{currentYear}</span>
      <span class="hidden sm:inline">&nbsp;|&nbsp;</span>
      <div class="flex flex-row items-center">
        <span class="pr-1">Made with </span><IconHeart
          class="font-color-accent"
        /><span>, powered by </span><IconVeggies class="font-color-accent" />.
      </div>
    </div>
  </div>
</footer>
